<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.stevens.cs549.dhts</groupId>
  <artifactId>dht-streaming</artifactId>
  <name>Streaming DHT application.</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>Implements a DHT node as a standalone app, with server-side events to push notifications to clients.</description>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>edu.stevens.cs549.dhts.main.Main</mainClass>
          <systemProperties>
            <systemProperty>
              <key>jersey.test.port</key>
              <value>${server.port.http}</value>
            </systemProperty>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers />
            </configuration>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <manifestEntries>
                <Main-Class>edu.stevens.cs549.dhts.main.Main</Main-Class>
                <Build-Number>1</Build-Number>
              </manifestEntries>
            </transformer>
            <transformer />
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <delete />
                <copy />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>local</id>
      <properties>
        <server.codebase>file:${server.testdir}/${server.name}.jar</server.codebase>
        <server.testdir>${server.home}/tmp/cs549/dht-test</server.testdir>
        <server.host>localhost</server.host>
        <server.path>${server.testdir}/node</server.path>
        <server.home>${user.home}</server.home>
      </properties>
    </profile>
    <profile>
      <id>remote</id>
      <properties>
        <server.codebase>file:${server.testdir}/${server.name}.jar</server.codebase>
        <server.testdir>${server.home}/tmp/cs549/dht-test</server.testdir>
        <server.userid>ec2-user</server.userid>
        <server.host>${server.external-dns}</server.host>
        <server.path>${server.testdir}/node</server.path>
        <server.home>/home/${server.userid}</server.home>
      </properties>
    </profile>
    <profile>
      <id>not-mac</id>
      <dependencies>
        <dependency>
          <groupId>com.sun</groupId>
          <artifactId>tools</artifactId>
          <version>1.5</version>
          <scope>system</scope>
          <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.glassfish.jersey</groupId>
        <artifactId>jersey-bom</artifactId>
        <version>${jersey.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <server.port.http>8080</server.port.http>
    <jersey.version>2.31</jersey.version>
    <server.testdir>${server.home}/tmp/cs549/dht-test</server.testdir>
    <server.name>dht</server.name>
    <server.external-dns>localhost</server.external-dns>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <server.dist>${server.testdir}</server.dist>
    <server.home>${user.home}</server.home>
  </properties>
</project>

