<head>
    <meta charset="utf-8">
    <title>iBlgr</title>
    <script src="https://kit.fontawesome.com/72bf814016.js"></script>
    <link rel="stylesheet" href="/public/css/profile.css">
</head>

<body>
    <div class="card card-profile">
        <div class="row">
            <div class="col-4">
                <img class="profile-image" src={{user_profile.picture}}>
            </div>
            <div class="col-8">
                <h1>{{user_profile.username}}</h1>
                <h2>{{user_profile.first_name}} {{user_profile.last_name}}</h2>
            {{!-- </div> --}}
            {{!-- <div class="col-5"> --}}
                <p>
                    {{user_profile.description}}
                </p>
                {{!-- {{#if user}}
                <a href="/">Edit Profile</a>
                {{/if}} --}}
            </div>
        </div>
    </div>

    <div class="card card-posts">
        <div class="card-columns">
            {{#each posts}}
                {{> post }}
            {{/each}}
        </div>
</body>